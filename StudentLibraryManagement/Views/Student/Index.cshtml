@model List<StudentLibraryManagement.Models.Student>

@section Styles {
    <link rel="stylesheet" href="~/css/Index.css" />
}

<div class="table-container">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Department</th>
                <th>Age</th>
                <th>Gender</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.Name</td>
                    <td>@student.Email</td>
                    <td>@student.Department</td>
                    <td>@student.Age</td>
                    <td>@student.Gender</td>
                </tr>
            }
        </tbody>
    </table>
</div>
