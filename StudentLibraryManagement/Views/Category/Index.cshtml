@model List<StudentLibraryManagement.Models.Category>

@section Styles {
    <link rel="stylesheet" href="~/css/Index.css" />
}

<div class="table-container">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                </tr>
            }
        </tbody>
    </table>
</div>
